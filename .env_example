# MCP Host 환경변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# OpenAI API 설정 (필수)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI 모델 설정 (선택적)
OPENAI_MODEL=gpt-4.1                    # 사용할 모델명 (기본값: gpt-4.1)
OPENAI_TEMPERATURE=0.1                  # 모델 온도 0.0-2.0 (기본값: 0.1)
OPENAI_MAX_TOKENS=1000                  # 최대 토큰 수 (기본값: 1000)

# MCP 서버 설정
MCP_SERVERS_CONFIG=./mcp_servers.json   # MCP 서버 설정 파일 경로

# Phoenix 모니터링 설정 (선택적)
PHOENIX_ENABLED=true                    # Phoenix 모니터링 활성화 여부

# MCP 서버 설정 파일 (mcp_servers.json) 예시:
# {
#   "weather": {
#     "command": "python",
#     "args": ["./examples/dummy_weather_server.py"],
#     "transport": "stdio"
#   },
#   "file-manager": {
#     "command": "python",
#     "args": ["./examples/dummy_file_server.py"],
#     "transport": "stdio"
#   }
# }

# 사용 가능한 OpenAI 모델 예시:
# - gpt-4.1                    # 최신 GPT-4 모델
# - gpt-4o                     # GPT-4 Omni 모델
# - gpt-4o-mini                # 빠르고 경제적인 모델
# - gpt-4-turbo                # GPT-4 Turbo 모델
# - gpt-3.5-turbo              # GPT-3.5 Turbo 모델

# 온도(Temperature) 설정 가이드:
# - 0.0: 매우 일관된 응답 (창의성 낮음)
# - 0.1-0.3: 일관성 중심 (추천)
# - 0.4-0.7: 균형잡힌 응답
# - 0.8-1.0: 창의적 응답
# - 1.1-2.0: 매우 창의적 (일관성 낮음)

# 최대 토큰 설정 가이드:
# - 500-1000: 짧은 응답
# - 1000-2000: 중간 길이 응답 (추천)
# - 2000-4000: 긴 응답
# - 4000+: 매우 긴 응답 (비용 주의) 

